<% form_name ||= "Manage" %>
<h1 class="text-center">  <%= form_name %> airport </h1>
<%= form_for @airport , method: (form_name.downcase == 'edit' ? 'put' : 'post') do |f| %>
  <% if @airport.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@airport.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @airport.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <select name="airport[city_id]" >
      <% @cities.each do |c| %>
        <option value="<%= c.id %>"> <%= c.name %></option>
      <% end %>
    </select>
  </div>
  <%= f.submit "#{form_name} airport", class: "btn btn-primary" %>
  <a href="<%= airports_path %>" class="btn btn-default"> View all </a>
<% end %>
